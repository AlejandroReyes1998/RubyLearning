<h1>Registros</h1>

<table class="table table-dark table-borderless">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Correo</th>
      <th>Telefono</th>
      <th>Usuario</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @registros.each do |registro| %>
      <tr>
        <td><%= registro.nombre %></td>
        <td><%= registro.apellido %></td>
        <td><%= registro.correo %></td>
        <td><%= registro.telefono %></td>
        <td>@<%= registro.usuario %></td>
        <td><button type="button" class="btn btn-light"><%= link_to 'Mostrar registro', registro %></button></td>
        <td><button type="button" class="btn btn-light"><%= link_to 'Editar registro', edit_registro_path(registro) %></button></td>
        <td><button type="button" class="btn btn-light"><%= link_to 'Eliminar registro', registro, method: :delete, data: { confirm: '¿Estás seguro de eliminar este registro?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="btn-group" role="group" aria-label="Basic example">
  <button type="button" class="btn btn-light"><%= link_to 'Dar de alta nuevo registro', new_registro_path %> </button>
</div>
